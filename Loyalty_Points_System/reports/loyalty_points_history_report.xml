<odoo>
    <template id="report_loyalty_points">
        <t t-call="web.html_container">
            <div class="page">
                <h2 class="text-center">Customer Sale Order Report</h2>
                <table style="font-family: arial, sans-serif; border-collapse: collapse; width: 100%; border: 1px solid #dddddd;">
                    <thead>
                        <tr>
                            <th style="border: 1px solid #dddddd; text-align: left; padding: 8px;">Order Number</th>
                            <th style="border: 1px solid #dddddd; text-align: left; padding: 8px;">Customer Name</th>
                            <th style="border: 1px solid #dddddd; text-align: left; padding: 8px;">Points Earned</th>
                            <th style="border: 1px solid #dddddd; text-align: left; padding: 8px;">Points Redeemed</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">
                                    <span t-field="doc.name"/>
                                </td>
                                <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">
                                    <span t-field="doc.partner_id.name"/>
                                </td>
                                <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">
                                    <span t-field="doc.points_earned"/>
                                </td>
                                <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">
                                    <span t-field="doc.points_redeemed"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

   <record id="loyalty_points_report" model="ir.actions.report">
        <field name="name">Customer report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Loyalty_Points_System.report_loyalty_points</field>
        <field name="report_file">Loyalty_Points_System.report_loyalty_points</field>
        <field name="binding_model_id" ref="model_loyalty_points"/>
        <field name="binding_type">report</field>
    </record>
</odoo>

