<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="customer_loyalty_wizard_form_view" model="ir.ui.view">
            <field name="name">customer.loyalty.wizard.form.view</field>
            <field name="model">loyalty.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Manually">

                        <group>
                            <field name="customer_id"/>
                            <field name="points_earned"/>
                            <field name="points_redeemed"/>
                            <field name="balance" />
                            <field name="reason" />
                        </group>

                <footer>
                    <button string="Add" type="object" name="save" class="btn-primary"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
                </form>
            </field>
        </record>
        <!-- student action -->
        <record id="action_view_customer_loyalty_wizard" model="ir.actions.act_window">
            <field name="name">Add info</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">loyalty.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="customer_loyalty_wizard_form_view"/> <!-- Update this line -->
            <field name="target">new</field>
        </record>

    </data>
</odoo>
