<odoo>
    <data>
        <record id="loyalty_customer_points_form_view" model="ir.ui.view">
            <field name="name">loyalty points form view</field>
            <field name="model">loyalty.points</field>
            <field name="arch" type="xml">
                <form string="Loyalty Points">
                    <header>
                        <button name="open_customer_loyalty_wizard" type="object" string="Add Manually" context="{'active_id': active_id}"/>
                         <button name="action_generate_report" type="object" string="Generate Report" class="bg-primary"/>
                    </header>

                    <sheet>

                        <group>
                            <field name="customer_id"/>
                            <field name="points_earned"/>
                            <field name="points_redeemed"/>
                            <field name="balance"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="loyalty_points_system_loyalty_points_tree_view_id" model="ir.ui.view">
            <field name="name">loyalty points tree view</field>
            <field name="model">loyalty.points</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer_id"/>
                    <field name="points_earned"/>
                    <field name="points_redeemed"/>
                    <field name="balance"/>
                </tree>
            </field>
        </record>

        <record id="loyalty_points_system_loyalty_points_action_id" model="ir.actions.act_window">
            <field name="name">loyalty points</field>
            <field name="res_model">loyalty.points</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    There is no records of Loyalty Points
                </p>
            </field>
        </record>

           <menuitem id="loyalty_points_sub_menu"
               name="Loyalty Points"
               parent="loyalty_points_main_menu"
               action="loyalty_points_system_loyalty_points_action_id"/>
    </data>


</odoo>